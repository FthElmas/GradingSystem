@model StudentAdd


<!DOCTYPE html>
<html>
<head>
    <title>Öğrenci Ekleme</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h2>Öğrenci Ekleme</h2>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <form asp-controller="AdminStudent" asp-action="AddStudent">
                    @Html.HiddenFor(model => model.Student.StudentID)

                    <div class="form-group">
                        <label asp-for="Student.StudentName">Name:</label>
                        <input asp-for="Student.StudentName" type="text" class="form-control" id="StudentName" required>
                    </div>

                    <div class="form-group">
                        <label asp-for="Student.StudentSurname">Surname:</label>
                        <input asp-for="Student.StudentSurname" type="text" class="form-control" id="StudentSurname" required>
                    </div>

                    <div class="form-group">
                        <label asp-for="Student.Email">Email:</label>
                        <input asp-for="Student.Email" type="text" class="form-control" id="StudentSurname" required>
                    </div>

                    <div class="form-group">
                        <label asp-for="Student.GraduationState">Graduation State:</label>
                        <input asp-for="Student.GraduationState" type="text" class="form-control" id="StudentSurname" required>
                    </div>

                    <div class="form-group">
                        <label asp-for="Student.CustomerCourseID">Course:</label>
                        <select asp-for="Student.CustomerCourseID" asp-items="@Model.CustomerCourseList" class="form-control" id="projectName" required></select>
                    </div>

                    <div class="form-check">
                        <input asp-for="Student.IsEliminated" type="checkbox" class="form-check-input" id="IsEliminated" >
                        <label asp-for="Student.IsEliminated" class="form-check-label" for="IsEliminated">Eliminated</label>
                    </div>

                    <div class="form-check">
                        <input asp-for="Student.IsActive" type="checkbox" class="form-check-input" id="IsActive">
                        <label asp-for="Student.IsActive" class="form-check-label" for="IsActive">Active</label>
                    </div>

                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>


</body>
</html>