@model StudentReportUpdateDTO


<!DOCTYPE html>
<html>
<head>
    <title>Rapor Düzenle</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h2>Rapor Düzenle</h2>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <form asp-controller="AdminStudentReport" asp-action="UpdateStudentReport">
                    @Html.HiddenFor(model => model.StudentReportID)
                    @Html.HiddenFor(model => model.StudentID)
                    @Html.HiddenFor(model => model.CreatedDate)


                    <div class="form-group">
                        <label asp-for="ReportName">Rapor Başlığı:</label>
                        <input asp-for="ReportName" type="text" class="form-control" value="@Model.ReportName" id="ReportName" required>
                    </div>

                    <div class="form-group">
                        <label asp-for="Report">Rapor:</label>
                        <input asp-for="Report" type="text" value="@Model.Report" class="form-control" id="Report" required>
                    </div>

                    <div class="form-check">
                        <input asp-for="IsActive" type="checkbox" class="form-check-input" id="IsActive">
                        <label asp-for="IsActive" class="form-check-label" for="IsActive">Aktif Mi</label>
                    </div>

                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>


</body>
</html>