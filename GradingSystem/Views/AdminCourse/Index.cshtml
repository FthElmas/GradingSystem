@model List<CourseSelectDTO>


<!DOCTYPE html>
<html>
<head>
    <title>Course</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <div class="container mt-5" style="margin-top:100px">
        <div class="row" style="margin-top:100px">
            <div class="col-12 text-right">
                <a asp-controller="AdminCourse" asp-action="AddCourse" class="btn btn-primary"><i class="fa fa-plus"></i> Add New Course</a>
            </div>
        </div>

        <div class="row mt-3" style="margin-top:100px">
            <div class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Created Date</th>
                            <th>Created By</th>
                            <th>Active</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.CourseID</td>
                                <td>@course.CourseName</td>
                                <td>@course.CreatedDate</td>
                                <td>@course.CreatedBy</td>
                                <td>@course.IsActive</td>
                                <td class="text-right">
                                    <a asp-controller="AdminCourse" asp-action="DeleteCourse" asp-route-course="@course.CourseID" class="btn btn-danger"><i class="fa fa-trash"></i> Sil</a>
                                    <a asp-controller="AdminCourse" asp-action="UpdateCourse" asp-route-course="@course.CourseID" asp-route-name="@course.CourseName" class="btn btn-warning"><i class="fa fa-edit"></i> Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>




</body>
</html>