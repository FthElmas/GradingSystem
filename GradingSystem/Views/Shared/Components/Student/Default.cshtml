@model StudentReportPage
<style>
    .card-group {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }
    
    .card {

        width: 1000px;
        height: 200px;
        margin-bottom: 20px;
    }
</style>
<script src="~/js/myform.js"></script>
<div id="cards" class="container">
    <ol>
        @foreach (var item in Model.Student)
        {
            var x = @Model.StudentReport[Model.Student.IndexOf(item)];
            <li>
                <div id="myCardDiv" class="card">
                    <div class="card-body">

                        <h5 class="card-title text-center">@item.StudentName @item.StudentSurname</h5>
                        <p class="card-text">Bugün Girilen Rapor Sayisi : @Model.StudentReport[Model.Student.IndexOf(item)].Count</p>
                        <p class="card-text">Bu hafta girilen rapor sayisi : @Model.WeekReport[Model.Student.IndexOf(item)].Count</p>
                        @if (x.Count >= 1)
                        {
                            <p class="card-text"><a>Son Raporlama :  </a>Soru : @x[x.Count - 1].ReportName     Rapor : @x[x.Count - 1].Report</p>
                        }
                    </div>
                    <div class="card-body medium text-center">
                        <a href="#" onclick="setStudentId('@item.StudentID');" class="card-link row-cols-sm-2 btn-project">Project</a>
                        <a href="#" onclick="setStudentId('@item.StudentID');" class="card-link row-cols-sm-2 btn-quiz">Quiz</a>
                        <a href="#" onclick="setStudentId('@item.StudentID');" class=" card-link row-cols-sm-2 btn-report">Report</a>
                    </div>
                </div>
            </li>
        }
    </ol>
</div>

